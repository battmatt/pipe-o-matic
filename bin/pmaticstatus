import argparse
import os
import sys

import pmatic


def main(args=None):
    if not args:
        args = sys.argv[1:]
    parser = build_command_parser()
    command = parser.parse_args(args)
    if command.verbose:
        pmatic.print_err('checking status in %s', command.context_path)
    meta_path = pmatic.meta_path(command.context_path)
    event_log = pmatic.EventLog(meta_path)
    print event_log.get_status()


def build_command_parser():
    parser = argparse.ArgumentParser(description=__doc__)
    parser.add_argument('-v', '--verbose', action='store_true')
    parser.add_argument(
        'context_path',
        help='the directory that defines the context of execution'
    )
    return parser


if __name__ == '__main__':
    main()
